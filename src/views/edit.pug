extends base.pug



block content 
    h4 Update Video
    form(method="POST")
        input(name="title",placeholder="Video Title",value=video.title,required)
        input(placeholder="Desciption",required,type="text",name="description",maxlength=80,value=video.desciption)
        input(placeholder="Hashtags, separated by comma",required,type="text",name="hashtags",value=video.hashtags.join(),minlength=20)
        
        input(value="Save", type="submit")